{% extends 'base.html.twig' %}

{% block title %}Movie App{% endblock %}

{% block body %}
<table class="table table-striped">
    <thead>
        <tr>
        <th scope="col">ID</th>
        <th scope="col">Nom</th>
        <th scope="col">Description</th>
        <th scope="col">Score</th>
        </tr>
    </thead>
    <tbody>
        {% for movie in movies %}
            <tr>
                <td>{{movie.id}}</td>
                <td><a href='{{ path('show_movie',  {id: movie.id}) }}'>{{movie.name}}</a></td>
                <td>{{movie.description}}</td>
                <td>{{movie.score|round(1)}}</td>
            </tr>
        {% endfor %}
    </tbody>
</table>
{% endblock %}
